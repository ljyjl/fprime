<component name="HealthMonitor" kind="active" namespace="Ref">
    <import_port_type>Svc/Sched/SchedPortAi.xml</import_port_type>
   
    <commands>
    <command kind="async" opcode="0" mnemonic="HM_UPDATE_TEMP_THRESHOLD">
        <args>
            <arg name="phase" type="U32">
            </arg>
            <arg name="minTemp" type="F32">
            </arg>
             <arg name="maxTemp" type="F32">
            </arg>
        </args>
    </command>
    </commands>
    <telemetry>
        <channel id="0" name="HM_PHASE" data_type="U32">
        </channel>
        <channel id="1" name="HM_MIN_TEMP" data_type="F32">
        </channel>
        <channel id="2" name="HM_MAX_TEMP" data_type="F32">
        </channel>
        <channel id="3" name="HM_PARAMETER_PHASE" data_type="U32">
        </channel>
        <channel id="4" name="HM_PARAMETER_TEMP" data_type="F32">
        </channel>
        <channel id="5" name="HM_PARAMETER_MIN_TEMP" data_type="F32">
        </channel>
        <channel id="6" name="HM_PARAMETER_MAX_TEMP" data_type="F32">
        </channel>
    </telemetry>
    <events>
        <event id="0" name="HM_TEMP_THRESHOLD_UPDATED" severity="ACTIVITY_HI" format_string = "Phase updated to: %d, Min temp updated to: %f,  Max temp updated to: %f" >
            <args>
                <arg name="phase" type="U32">
                </arg>
                <arg name="minTemp" type="F32">
                </arg>
                <arg name="maxTemp" type="F32">
                </arg>
            </args>
        </event>
        <event id="1" name="HM_TEMP_LO" severity="WARNING_LO" format_string = "Warning: Temperature is less than the min temperature: %f" >
            <args>
                <arg name="temperature" type="F32">
                </arg>
            </args>
        </event>
        <event id="2" name="HM_TEMP_HI" severity="WARNING_HI" format_string = "Warning: Temperature is higher than the max temperature: %f" >
            <args>
                <arg name="temperature" type="F32">
                </arg>
            </args>
        </event>
        <event id="3" name="HM_PARAMATER_UPDATED" severity="ACTIVITY_LO" format_string = "HealthMonitor Parameter id %d was updated" >
            <comment>
            Updated Parameter
            </comment>
            <args>
                <arg name="id" type="U32">
                    <comment>
                    ID argument
                    </comment>
                </arg>
            </args>
        </event>
    </events>
    <parameters>
        <parameter id="0" name="phase" data_type="U32" default="0" set_opcode="16" save_opcode="17">
            <comment>
            phase by HM
            </comment>
        </parameter>
         <parameter id="1" name="temperature" data_type="F32" default="50.0" set_opcode="18" save_opcode="19">
            <comment>
            Termometer value by HM
            </comment>
        </parameter>
        <parameter id="2" name="minTemp" data_type="F32" default="50.0" set_opcode="20" save_opcode="21">
            <comment>
            Threshold min value by HM
            </comment>
        </parameter>
        <parameter id="3" name="maxTemp" data_type="F32" default="100.0" set_opcode="22" save_opcode="23">
            <comment>
            Threshold max value by HM
            </comment>
        </parameter>
     </parameters>
    
    <ports>
        <port name="schedIn" data_type="Svc::Sched"  kind="sync_input"    max_number="1">
        </port>
    </ports>
</component>
